<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTienda">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tienda" />

    <TextView
        android:id="@+id/textViewDineroTienda"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_tienda"
        android:padding="5dp"
        android:textAlignment="center"
        android:textColor="@color/borderEvento"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_tienda"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/objeto"
            android:textAlignment="center"
            android:textColor="@color/borderEvento"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnObjeto1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:onClick="comprarObjeto1"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnObjeto2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:onClick="comprarObjeto2"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnObjeto3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:onClick="comprarObjeto3"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/atributos"
            android:textAlignment="center"
            android:textColor="@color/borderEvento"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFuerza"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:onClick="mejorarFuerza"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnMagia"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:onClick="mejorarMagia"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnDefensa"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:onClick="mejorarDefensa"
            android:textSize="10sp" />

        <Button
            android:id="@+id/btnAgilidad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="40dp"
            android:onClick="mejorarAgilidad"
            android:textSize="10sp" />
    </LinearLayout>

    <Button
        android:id="@+id/btnSalirTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:maxLines="1"
        android:onClick="salirDeTienda"
        android:singleLine="true"
        android:text="@string/volverAlMapa"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>