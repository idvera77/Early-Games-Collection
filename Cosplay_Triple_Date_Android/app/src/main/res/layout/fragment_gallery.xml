<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/galleryConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="40dp"
    android:background="@drawable/border_menu"
    tools:context=".fragments.GalleryFragment">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:id="@+id/imageGallery0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/gallery_border"
                android:baselineAlignBottom="false"
                android:cropToPadding="true"
                android:padding="3dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/chapter1unlock" />

            <ImageView
                android:id="@+id/imageGallery1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/gallery_border"
                android:baselineAlignBottom="false"
                android:cropToPadding="true"
                android:padding="3dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/chapter1unlock" />

            <ImageView
                android:id="@+id/imageGallery2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/gallery_border"
                android:baselineAlignBottom="false"
                android:cropToPadding="true"
                android:padding="3dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/chapter2unlock" />

            <ImageView
                android:id="@+id/imageGallery3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/gallery_border"
                android:baselineAlignBottom="false"
                android:cropToPadding="true"
                android:padding="3dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/chapter2unlock" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:scaleType="fitXY">

            <ImageView
                android:id="@+id/imageGallery4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/gallery_border"
                android:baselineAlignBottom="false"
                android:cropToPadding="true"
                android:padding="3dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/chapter3unlock" />

            <ImageView
                android:id="@+id/imageGallery5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/gallery_border"
                android:baselineAlignBottom="false"
                android:cropToPadding="true"
                android:padding="3dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/chapter3unlock" />

            <ImageView
                android:id="@+id/imageGallery6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/gallery_border"
                android:baselineAlignBottom="false"
                android:cropToPadding="true"
                android:padding="3dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/chapter4unlock" />

            <ImageView
                android:id="@+id/imageGallery7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/gallery_border"
                android:baselineAlignBottom="false"
                android:cropToPadding="true"
                android:padding="3dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/chapter4unlock" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>